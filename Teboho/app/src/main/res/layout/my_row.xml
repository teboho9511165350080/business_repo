<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/client_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/client_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toEndOf="@id/client_id_txt"
                app:layout_constraintTop_toTopOf="@+id/client_id_txt" />

            <TextView
                android:id="@+id/client_surname_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/client_name_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toEndOf="@id/client_name_txt"
                app:layout_constraintTop_toTopOf="@+id/client_id_txt" />

            <TextView
                android:id="@+id/client_amount_B_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/client_id_txt"
                app:layout_constraintEnd_toEndOf="@+id/client_amount_A_txt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/client_amount_A_txt"
                app:layout_constraintTop_toTopOf="@+id/client_year_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/client_amount_A_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/client_amount_B_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toEndOf="@id/client_year_txt"
                app:layout_constraintTop_toTopOf="@id/client_id_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/client_day_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="Text"
                app:layout_constraintBottom_toBottomOf="@id/client_id_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toEndOf="@id/client_id_txt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/client_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                app:layout_constraintBottom_toBottomOf="@id/client_day_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toEndOf="@id/client_day_txt"
                app:layout_constraintTop_toTopOf="@id/client_day_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/client_year_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                app:layout_constraintBottom_toBottomOf="@id/client_month_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toEndOf="@id/client_month_txt"
                app:layout_constraintTop_toTopOf="@id/client_month_txt"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button_sync"
                android:layout_width="50dp"
                android:layout_height="43dp"
                android:layout_marginStart="325dp"
                android:layout_marginLeft="325dp"
                android:background="@drawable/button"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/client_id_txt"
                app:layout_constraintTop_toTopOf="@+id/client_amount_A_txt"
                app:layout_constraintVertical_bias="0.555"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>